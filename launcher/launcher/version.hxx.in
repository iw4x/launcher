#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define HELLO_VERSION       $launcher.version.project_number$ULL
#define HELLO_VERSION_STR   "$launcher.version.project$"
#define HELLO_VERSION_ID    "$launcher.version.project_id$"
#define HELLO_VERSION_FULL  "$launcher.version$"

#define HELLO_VERSION_MAJOR $launcher.version.major$
#define HELLO_VERSION_MINOR $launcher.version.minor$
#define HELLO_VERSION_PATCH $launcher.version.patch$

#define HELLO_PRE_RELEASE   $launcher.version.pre_release$

#define HELLO_SNAPSHOT_SN   $launcher.version.snapshot_sn$ULL
#define HELLO_SNAPSHOT_ID   "$launcher.version.snapshot_id$"
